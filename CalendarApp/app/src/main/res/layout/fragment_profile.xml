<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sye.kupps.calendarapp.ProfileFragment">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <ImageButton
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/prof_pic_h_w"
            android:layout_height="@dimen/prof_pic_h_w"
            android:background="@drawable/tbd"
            />

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/padding_20">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/prof_info_text_size"
                />

            <TextView
                android:id="@+id/profile_current_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busy or Not"
                android:textSize="@dimen/prof_info_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Info"
                android:textSize="@dimen/prof_info_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Info"
                android:textSize="@dimen/prof_info_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/view_friends_button"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="TBD take to a list of user's friends"
                />

            <Button
                android:id="@+id/open_calendar_from_profile"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/view_calendar"
                />

        </LinearLayout>


    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

    </ListView>

</LinearLayout>
